.overlay .panel.manifesto {
  width: 450px
  font-size: 15px

  h2 {
    color: #D32626
    font-family: "Lily Script One", cursive, "Helvetica Neue", Helvetica, Arial, sans-serif
    font-weight: normal
    font-size: 24px
    line-height: 60px
  }

  p {
    margin-bottom: 8px

    &:last-child {
      margin-bottom: 0
    }
  }

  button {
    height: 30px
    font-size: 13px
    padding: 0 12px
  }

  article {
    margin: 20px 30px 0 30px
  }

  footer {
    margin: 15px 20px 20px 30px
  }
}