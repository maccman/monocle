@import '../mixins'

.app .posts-landing {
  background: #F8FAFB
  position: relative
  height: 100%
  box-shadow: inset 0 0px 1px rgba(0, 0,0, 0.1)

  .wrapper {
    position: absolute
    left: 50%
    top: 50%
    margin: -90px 0 0 -162px
  }

  article.splash {
    display: block
    height: 123px
    line-height: 123px
    box-sizing: border-box
    text-align: center
  }

  nav {
    position: absolute
    right: 15px
    top: 15px

    a {
      display: block
      background-position: center
      float: right
      margin-left: 11px
    }

    a.twitter {
      width: 23px
      height: 19px
      background-image2x: '/assets/twitter.png' 23px 19px
    }

    a.feed {
      width: 17px
      height: 18px
      background-image2x: '/assets/feed.png' 17px 18px
    }
  }

  h1 {
    color: #C9CBCE
    text-shadow: 0 1px rgba(255, 255, 255, 0.9)
    font-family: "Lily Script One", cursive, "Helvetica Neue", Helvetica, Arial, sans-serif
    text-transform: lowercase
    font-size: 90px
    font-weight: normal
    margin: 0 0 0 -5px
    padding: 0
    user-select: none
    pointer-events: none
  }
}