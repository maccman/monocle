@import '../mixins'

.app .posts-show {
  position: absolute

  // Sidebar
  left: 415px
  top: 0
  bottom: 0
  right: 0

  box-sizing: border-box
  overflow-y: auto
  -webkit-overflow-scrolling: touch

  .wrap {
    margin: 0 auto;
    max-width: 825px;
    min-width: 275px;
    box-sizing: border-box
  }

  .vote {
    cursor: pointer
  }

  .meta-point {
    font-size: 12px
    color: #A1A8B2

    a {
      color: #A1A8B2
    }

    &:after {
      content: ' Â· '
      font-size: 13px
      color: #77808C
      line-height: 1.7em
    }

    &:last-child:after {
      display: none
    }
  }

  header {
    box-sizing: border-box
    position: relative
    padding: 20px 30px
    overflow: hidden

    .icon {
      float: left
      display: block
      height: 98px
      width: 98px
      position: relative
      margin-right: 16px

      img {
        border-radius: 5px
        display: block
        height: 100%
        width: 100%
      }

      &:after {
        content: ''
        border-radius: 5px
        box-shadow: rgba(0, 0, 0, 0.08) 0 1px 1px inset
        display: block
        left: 0
        position: absolute
        top: 0
        width: 100%
        height: 100%
      }
    }

    .title {
      line-height: 28px
      margin-bottom: 4px
    }

    .title a {
      color: #3D525E

      &:hover {
        color: #D32626
        text-decoration: none
      }
    }

    .summary {
      border-top: 1px solid #EBEEF2
      margin-top: 20px
      padding-top: 7px
      position: relative

      &:before {
        content: 'Summary'
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
        font-size: 11px
        font-weight: 700
        color: #77808c
        text-transform: uppercase
        position: absolute
        top: -13px
        background: #FFF
        padding-right: 6px
      }
    }

    &.icon-present section {
      margin-left: 114px
    }

    &.icon-error .icon {
      img {
        display: none
      }
    }
  }
}